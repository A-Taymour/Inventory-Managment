@using Inventory.DB.ViewModels
@model CategoryViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Category</h2>

    <form asp-controller="Category" asp-action="Update" method="post">
        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CategoryName" class="form-label">
                    <i class="fas fa-tag"></i> Category Name
                </label>
                <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Description" class="form-label">
                    <i class="fas fa-pencil-alt"></i> Description
                </label>
                <input asp-for="Description" class="form-control" placeholder="Enter description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center mt-4">
            <input type="submit" value="Save" class="btn btn-primary me-2" />
            <a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
