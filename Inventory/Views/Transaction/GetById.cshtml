@model Transaction

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Product Details</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    <strong>Transaction Type:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.TransactionType
                </dd>

                <dt class="col-sm-4">
                    <strong>Quantity:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.Quantity
                </dd>

                <dt class="col-sm-4">
                    <strong>Date:</strong>
                </dt>
                <dd class="col-sm-8">
                    @Model.TransactionDate.ToString("MM/dd/yyyy")
                </dd>

                <dt class="col-sm-4">
                    <strong>Stock Quantity:</strong>
                </dt>
                <dd class="col-sm-8">
                    <!-- Assuming you have StockQuantity property in Transaction model -->
                    @Model.Quantity
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Update" asp-route-id="@Model.ID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="GetAll" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
