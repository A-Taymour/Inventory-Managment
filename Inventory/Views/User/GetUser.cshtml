@model Product

<h2>Product Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Stock Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.StockQuantity
        </dd>
        <dt class="col-sm-2">
            Low Stock Threshold
        </dt>
        <dd class="col-sm-10">
            @Model.LowStockThreshold
        </dd>
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Updated At
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedAt.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="GetAllProducts">Back to List</a>
</div>
