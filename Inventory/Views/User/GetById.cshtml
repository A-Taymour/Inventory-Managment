@model User

<h2> User Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            User Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            User Phone Number 
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        
        
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.ID">Edit</a> 
    <a asp-action="GetAll">Back to List</a>
</div>
