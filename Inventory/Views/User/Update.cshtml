@using Inventory.DB.ViewModels
@model Inventory.DB.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit User</h2>

    <form asp-controller="User" asp-action="Update" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="text" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="GetAll" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
