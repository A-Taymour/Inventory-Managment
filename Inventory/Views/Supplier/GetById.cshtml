@model Supplier

@{
    ViewBag.Title = "Supplier Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Supplier Details</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Supplier Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <!-- Optional: Remove Password for security reasons -->
                <!-- <dt class="col-sm-3">Password</dt>
                <dd class="col-sm-9">@Model.Password</dd> -->
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="GetAll" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>