@model IEnumerable<Supplier>

@{
    ViewBag.Title = "All Suppliers";
}

<div class="container mt-4">
    <h2 class="mb-4">All Suppliers</h2>

    <div class="mb-3">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search Suppliers..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.Id</td>
                    <td>@supplier.Name</td>
                    <td>@supplier.Email</td>
                    <td>@supplier.Phone</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@supplier.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@supplier.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this supplier?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <a asp-action="Insert" class="btn btn-success">Add New Supplier</a>
    </div>
</div>

