@model CombinedReportViewModel

<h2>Stock Reports</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Stock Quantity</th>
            <th>Low Stock Threshold</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model.StockReports)
        {
            <tr>
                <td>@stock.ProductName</td>
                <td>@stock.StockQuantity</td>
                <td>@stock.LowStockThreshold</td>           
            </tr>
        }
    </tbody>
</table>

<h2>Product Reports</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Low Stock Status</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ProductReports)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Supplier</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td> 
                <td>@product.LowStockStatus</td> 
            </tr>
        }
    </tbody>
</table>

<h2>Supplier Reports</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Supplier Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Product Count</th>
            <th>Product Names</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model.SupplierReports)
        {
            <tr>
                <td>@supplier.SupplierName</td>
                <td>@supplier.Email</td>
                <td>@supplier.Phone</td>
                <td>@supplier.ProductCount</td>
                <td>
                    @if (supplier.ProductNames != null && supplier.ProductNames.Any())
                    {
                        @string.Join(", ", supplier.ProductNames)
                    }
                    else
                    {
                        <span>No Products</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
