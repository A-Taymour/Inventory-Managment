@using Inventory.DB.ViewModels
@model Inventory.DB.ViewModels.ProductViewModel

@{
	ViewData["Title"] = "Insert Product";
}

<h2 class="text-center mb-4">Add Product</h2>

<form asp-action="Insert" method="post" style="margin-top:30px">
	<div class="row mb-3">
		<div class="col-md-6">
			<label asp-for="Name" class="control-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="col-md-6">
			<label asp-for="Price" class="control-label"></label>
			<input asp-for="Price" type="number" step="0.01" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-md-6">
			<label asp-for="Description" class="control-label"></label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div class="col-md-6">
			<label asp-for="StockQuantity" class="control-label"></label>
			<input asp-for="StockQuantity" type="number" class="form-control" />
			<span asp-validation-for="StockQuantity" class="text-danger"></span>
		</div>
		<div class="col-md-6">
			<label asp-for="imageurl" class="control-label"></label>
			<input asp-for="imageurl" type="text" class="form-control" />
			<span asp-validation-for="imageurl" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-md-6">
			<label asp-for="LowStockThreshold" class="control-label"></label>
			<input asp-for="LowStockThreshold" type="number" class="form-control" />
			<span asp-validation-for="LowStockThreshold" class="text-danger"></span>
		</div>
		<div class="row mb-3">

			<div class="row mb-3">
				<div class="col-md-6">
					<label for="CategoryID" class="control-label">Category Name</label>
					<select asp-for="CategoryID" class="form-select" asp-items="Model.categories"></select>
					<span asp-validation-for="CategoryID" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<div class="col-md-6">
					<label for="SupplierID" class="control-label">Supplier Name</label>
					<select asp-for="SupplierID" class="form-select" asp-items="Model.Suppliers"></select>
					<span asp-validation-for="SupplierID" class="text-danger"></span>
				</div>
			</div>


			<div class="form-group">
				<input type="submit" value="Insert" class="btn btn-primary" />
			</div>
</form>

<div class="mt-3">
	<a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
</div>
