@model IEnumerable<Product>

<h2>Product List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Stock Quantity</th>
            <th>Low Stock Threshold</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@product.UpdatedAt.ToString("yyyy-MM-dd")</td>
                <td>@product.StockQuantity</td>
                <td>@product.LowStockThreshold</td>

                <td>
                    <a asp-action="Update" asp-route-id="@product.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Insert">Create New Product</a>
