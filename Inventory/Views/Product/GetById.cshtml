@model Product

<h2 class="text-center mb-4">Product Details</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    Product Name
                </dt>
                <dd class="col-sm-9">
                    @Model.Name
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Description
                </dt>
                <dd class="col-sm-9">
                    @Model.Description
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Price
                </dt>
                <dd class="col-sm-9">
                    @Model.Price.ToString("C")
                </dd>
 
                <dt class="col-sm-3 font-weight-bold">
                    Stock Quantity
                </dt>
                <dd class="col-sm-9">
                    @Model.StockQuantity
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Low Stock Threshold
                </dt>
                <dd class="col-sm-9">
                    @Model.LowStockThreshold
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Created At
                </dt>
                <dd class="col-sm-9">
                    @Model.CreatedAt.ToString("yyyy-MM-dd")
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Updated At
                </dt>
                <dd class="col-sm-9">
                    @Model.UpdatedAt.ToString("yyyy-MM-dd")
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Image
                </dt>
                <dd class="col-sm-9">
                <dt class="col-sm-3 font-weight-bold">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/assets/ProductImages/@Model.imageurl" alt="@Model.imageurl"  />
                    </dt>
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-right">
        <a asp-action="Update" asp-route-id="@Model.ID" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="GetAllProducts" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
